<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>DomoMaker</title>
  <link rel="shortcut icon" href="/hosted/img/favicon.png" />
  <link rel="stylesheet" type="text/css" href="/hosted/style.css" />
</head>

<body>
  <nav><a href="/login"><img id="logo" src="/hosted/img/face.png" alt="face logo" /></a>
    <div class="navlink"><a href="/logout">Log out</a></div>
  </nav>
  <section id="makeDomo">
    <form id="domoForm" name="domoForm" action="/maker" method="POST" class="domoForm">
      <label for="name">Name: </label>
      <input id="domoName" type="text" name="name" placeholder="Domo Name" />
      <label for="age">Age: </label>
      <input id="domoAge" type="text" name="age" placeholder="Domo Age" />
      <input class="makeDomoSubmit" type="submit" value="Make Domo" />
    </form>
  </section>

  <section id="domos">
    {{#if domos}}
    {{#each domos}}
    <div class="domo">
      <img src="/hosted/img/domoface.jpeg" alt="domo face" class="domoFace">
      <h3 class="domoName">Name: {{this.name}}</h3>
      <h3 class="domoAge">Age: {{this.age}}</h3>
    </div>
    {{/each}}
    {{else}}
    <h3 class="emptyDomo">No Domos yet!</h3>
    {{/if}}
  </section>

  <div id="domoMessage" class='hidden'>
    <img id="speech" src="/hosted/img/speech.png" alt="speech box" />
    <h3><span id="errorMessage"></span></h3>
    <img id="domo" src="hosted/img/domo.png" alt="domo" />
  </div>
  <script src="/hosted/bundle.js"></script>
</body>

</html>